// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  PREMIUM
  PERSONAL
}

enum Gender {
  MASCULINO
  FEMININO
  OUTRO
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  role     Role?
  name     String?
  nasc     DateTime?
  weight   Float?
  height   Float?
  gender   Gender?
}
